<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cuando el EditText está enfocado -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Fondo transparente -->
            <stroke android:width="2dp" android:color="#55AD0000"/> <!-- Cambia el color de la línea -->
        </shape>
    </item>

    <!-- Cuando el EditText no está enfocado -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Fondo transparente -->
            <stroke android:width="1dp" android:color="#55AD0000"/> <!-- Cambia el color de la línea sin enfoque -->
        </shape>
    </item>
</selector>